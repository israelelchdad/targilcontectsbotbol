<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ActivityOneContects">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="3">
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/Ca_imeg"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_weight="3"></ImageView>

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="add to favorit"
            android:id="@+id/ac_badd"
            android:textSize="10dp"
            android:textStyle="bold"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:id="@+id/ac_remov"
            android:text="remov favorite"
            android:textSize="10dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ac_name"
            android:textSize="20sp"
            android:layout_height="0dp"
            android:layout_weight="1"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ac_lastname"
            android:textSize="20sp"
            android:layout_height="0dp"
            android:layout_weight="1"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:id="@+id/ac_job"
            android:layout_height="0dp"
            android:layout_weight="1"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/likedown"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_height="wrap_content"></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/likeup"
            android:layout_height="wrap_content"></ImageView>

    </LinearLayout>

</LinearLayout>